{
    "dockerFile": "Dockerfile",
    "appPort": [
        "8000:8000"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go"
            ]
        }
    },
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "postCreateCommand": {
        "configure-docker": "sudo chown $(whoami) /var/run/docker.sock"
    }
}
